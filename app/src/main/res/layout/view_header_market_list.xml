<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_size">


        <RelativeLayout
            android:id="@+id/llHeaderLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgHeaderLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/header_margin_start"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_back" />

        </RelativeLayout>

        <android.support.v7.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/llHeaderLeft"
            android:layout_toStartOf="@id/llHeaderRight"
            android:gravity="right"
            android:layout_marginLeft="22dp"
            app:queryHint="@string/text.iam_looking_for"
            android:layoutDirection="rtl"
            app:searchHintIcon="@null"
            android:layout_gravity="end">

        </android.support.v7.widget.SearchView>

        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/llHeaderLeft"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/app_name"
            android:layout_marginLeft="@dimen/header_margin_end"
            android:textColor="@color/headerTextColor"
            android:textSize="@dimen/header_text_size" />

        <RelativeLayout
            android:id="@+id/llHeaderRight"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgHeaderRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/header_margin_start"
                android:layout_marginEnd="@dimen/header_margin_start"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_filter" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llMainGradient"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/main_gradient"
        android:orientation="horizontal" />

</LinearLayout>
