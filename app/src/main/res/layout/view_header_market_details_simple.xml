<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#62000000"
    android:layout_height="@dimen/header_size">


    <RelativeLayout
        android:id="@+id/llHeaderLeftSimple"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgHeaderLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/header_margin_end"
            android:layout_marginStart="@dimen/header_margin_start"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_back_details_white" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtHeaderSimple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@id/llHeaderLeftSimple"
        android:layout_toStartOf="@id/llHeaderRightSimple"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@android:color/white"

        android:textSize="@dimen/header_text_size" />

    <RelativeLayout
        android:id="@+id/llHeaderRightSimple"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/imgHeaderRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="19dp"
            android:layout_marginStart="@dimen/header_margin_start"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_share_details_white" />

    </RelativeLayout>


</RelativeLayout>