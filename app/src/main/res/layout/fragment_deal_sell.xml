<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/header"
            layout="@layout/view_header_sell" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:clipToPadding="false"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.ubcoin.view.deal_description.ItemDescriptionView
                    android:id="@+id/itemDescription"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.ubcoin.view.deal_description.ProgressDescriptionView
                    android:id="@+id/progressDescription"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.ubcoin.view.deal_description.SellerSetPriceView
                    android:id="@+id/sellerSetPrice"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.ubcoin.view.deal_description.UserProfileView
                    android:id="@+id/userProfile"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"/>

                <Button
                    android:id="@+id/btnChat"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:background="#fff"
                    android:textColor="@color/underlineColor"
                    android:text="@string/text.chat_with_buyer"/>

                <com.ubcoin.view.deal_description.OrganizeDeliveryView
                    android:id="@+id/organizeDelivery"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.ubcoin.view.deal_description.ProgressView
                    android:id="@+id/progressView"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"/>

                <Button
                    android:id="@+id/btnReport"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:background="#fff"
                    android:textColor="@color/itemStatusBlock"
                    android:text="@string/text.report_problem"/>

                <com.ubcoin.view.deal_description.PurchaseMainView
                    android:id="@+id/purchaseMain"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnCancelDeal"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:background="#fff"
                    android:textColor="@color/itemStatusBlock"
                    android:text="@string/text.cancel_the_deal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
        android:id="@+id/progressCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:colors="@array/progressColors"
        app:type="nexus_rotation_cross" />

</RelativeLayout>