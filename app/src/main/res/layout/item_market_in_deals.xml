<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/marketInFavoriteHeight"
    android:layout_marginTop="1dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imgDealsItemLogo"
        android:layout_width="@dimen/marketInFavoriteHeightImage"
        android:layout_height="@dimen/marketInFavoriteHeightImage"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marketInFavoriteMarginDiff"
        android:layout_toEndOf="@id/imgDealsItemLogo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDealsItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/headerTextColor"
            android:textSize="@dimen/price_textsize" />

        <TextView
            android:id="@+id/txtDealsItemName"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/headerTextColor"
            android:textSize="@dimen/price_textsize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/camera_margin"
                android:text="@string/requires_external_app"
                android:textColor="@color/haveAccountColor"
                android:textSize="@dimen/user_agreement_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/camera_margin"
                android:src="@drawable/ic_next" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>