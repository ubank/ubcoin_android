<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imgDealsItemLogo"
        android:layout_width="@dimen/marketInFavoriteHeightImage"
        android:layout_height="@dimen/marketInFavoriteHeightImage"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marketInFavoriteMarginDiff"
        android:layout_marginStart="@dimen/marketInFavoriteMarginDiff"
        android:layout_marginEnd="@dimen/marketInFavoriteMarginDiff"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/imgDealsItemLogo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDealsItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/headerTextColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtDealsItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="12345678"
            android:maxLines="1"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/headerTextColor"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_marginEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDealsSmallIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_dialog" />

            <TextView
                android:id="@+id/txtDealsItemStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imgDealsSmallIcon"
                android:text="@string/requires_external_app"
                android:textColor="@color/haveAccountColor"
                android:textSize="@dimen/user_agreement_text_size" />

        </RelativeLayout>


    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/camera_margin"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_next" />

</RelativeLayout>