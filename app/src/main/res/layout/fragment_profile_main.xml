<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/swipeRefreshLayout"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackground"
        android:orientation="vertical">

        <include layout="@layout/common_header" />

        <RelativeLayout
            android:id="@+id/llProfileMain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detailsProfileHeightMin"
            android:layout_marginTop="@dimen/detailsProfileMargin"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/imgProfilePhoto"
                android:layout_width="@dimen/detailsSubProfileHeight"
                android:layout_height="@dimen/detailsSubProfileHeight"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/detailsProfileMargin"
                android:src="@drawable/img_profile_default" />


            <TextView
                android:id="@+id/txtProfileName"
                android:layout_marginStart="@dimen/detailsProfileMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imgProfilePhoto"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/sellerProfileNickColor"
                android:textSize="@dimen/have_account_text_size" />

            <LinearLayout
                android:id="@+id/llArrowLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/detailsProfileMargin"
                    android:src="@drawable/ic_next" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:id="@+id/llProfileBalance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detailsProfileHeightMin"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/ivUBC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="20dp"
                android:src="@drawable/img_ubc"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/ivUBC"
                android:layout_toStartOf="@id/llArrowLayout2">

                <LinearLayout
                    android:id="@+id/llAnchor"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/txtProfileBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/llAnchor"
                    android:layout_marginStart="@dimen/detailsProfileMargin"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/headerTextColor"
                    android:layout_marginBottom="4dp"
                    android:textSize="@dimen/have_account_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llAnchor"
                    android:layout_marginStart="@dimen/detailsProfileMargin"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/ethColor"
                    android:textSize="12sp"
                    android:text="UBC"/>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llArrowLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/detailsProfileMargin"
                    android:src="@drawable/ic_next" />

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:id="@+id/llProfileBalanceETH"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detailsProfileHeightMin"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/ivETH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="20dp"
                android:src="@drawable/img_eth"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/ivETH"
                android:layout_toStartOf="@id/llArrowLayout2ETH">

                <LinearLayout
                    android:id="@+id/llAnchorETH"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/txtProfileBalanceETH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/llAnchorETH"
                    android:layout_marginStart="@dimen/detailsProfileMargin"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/headerTextColor"
                    android:textSize="@dimen/have_account_text_size"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llAnchorETH"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="@dimen/detailsProfileMargin"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/ethColor"
                    android:textSize="12sp"
                    android:text="ETH"/>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llArrowLayout2ETH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/detailsProfileMargin"
                    android:src="@drawable/ic_next" />

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlProfileDeals"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detailsProfileHeightMin"
            android:background="@android:color/white"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/llArrowLayoutDeals">

                <LinearLayout
                    android:id="@+id/llAnchorDeals"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/llAnchorDeals"
                    android:layout_marginStart="@dimen/detailsProfileMargin"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/ethColor"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:text="@string/menu_label_deals"/>

                <TextView
                    android:id="@+id/txtProfileDeals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/detailsProfileMargin"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/headerTextColor"
                    android:textSize="@dimen/have_account_text_size"
                    android:text="@string/menu_label_deals"/>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llArrowLayoutDeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/detailsProfileMargin"
                    android:src="@drawable/ic_next" />

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>